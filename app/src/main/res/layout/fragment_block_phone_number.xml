<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                style="@style/NormalDescText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="차단번호 총 :" />

            <LinearLayout
                android:id="@+id/ll_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="@+id/content_linearlayout">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.8"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/rp_fund_item_nm_textfield"
                        android:layout_width="240dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:background="#f3f3f3"
                        android:hint="전화번호를 입력하세요."
                        android:imeOptions="actionSearch"
                        android:maxLength="20"
                        android:textSize="15sp" />

                </LinearLayout>

                <Button
                    android:id="@+id/search_btn"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/ic_search_btn"
                    android:padding="6dp" />


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_search_block_number"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="left|top"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:cacheColorHint="#00000000"
                android:divider="@color/color05"
                android:dividerHeight="1dp"
                android:fadeScrollbars="true"
                android:scrollbars="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
