<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="318dp"
            android:layout_height="280dp"
            android:layout_centerInParent="true"
            android:background="@drawable/rectagle_all_round">

            <ImageButton
                android:id="@+id/btn_dlg_close"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/shape_3" />

            <LinearLayout
                android:id="@+id/dlg_message_cover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/dlg_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:textColor="#222222"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    tools:text="Title" />

                <TextView
                    android:id="@+id/dlg_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="16dp"

                    android:layout_marginRight="20dp"
                    android:textColor="#454545"
                    android:textSize="18sp"
                    tools:text="Message\nMessage" />

                <FrameLayout
                    android:layout_width="318dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="54dp">

                    <LinearLayout
                        android:id="@+id/layoutButtons"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.3dp"
                            android:background="#b7b7b7" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:background="@color/bgColorWhite"
                            android:padding="5dp"

                            >

                            <Button
                                android:id="@+id/btnLeft"
                                android:layout_width="120dp"
                                android:layout_height="40dp"
                                android:background="@drawable/rectagle_all_round"
                                android:gravity="center"
                                android:text="확인"
                                android:textColor="#222222"
                                android:textSize="22sp" />

                            <Button
                                android:id="@+id/btnRight"
                                android:layout_width="120dp"
                                android:layout_height="40dp"
                                android:layout_weight="3"
                                android:background="@drawable/rectagle_all_round"
                                android:layout_alignParentRight="true"
                                android:gravity="center"
                                android:text="취소"
                                android:textColor="#222222"
                                android:textSize="22sp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnSingle"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@color/color05"
                        android:textColor="@color/txtColorWhite"
                        android:textSize="22sp" />
                </FrameLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>
